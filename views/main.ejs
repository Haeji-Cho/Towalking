    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="./main.css">

    <script type="text/javascript">
        function getGeo(num) {
            if (num == null) {
                return;
            }
            else {
                var strGeo = document.getElementsByClassName("dropdown-item")[num].text;
                console.log(strGeo);
                document.getElementById("showList").style.display = 'none';

                location.replace("/towalking/<%= user_id %>/list/" + strGeo);
                const btnName = document.getElementById("dropdownBtn");
                btnName.innerText = strGeo;
                //버튼 누른 내용 그대로 두는 코드 >> 하지만 지금 실행이 안된다!!! 0.0
            }
        }
        function changePage(num) {
            if (num == 0) {
                document.getElementById("changingPage").style.display = 'block';
                document.getElementById("userPage").style.display = 'none';
                location.replace("/towalking/<%= user_id %>/list");
            }
            else if (num == 1) {
                document.getElementById("changingPage").style.display = 'none';
                document.getElementById("userPage").style.display = 'block';
                location.replace("/towalking/<%= user_id %>/list/userList");
            }
        }
    </script>

    <style>
        @import url(//fonts.googleapis.com/earlyaccess/hanna.css);

        .titleFont {
            font-family: 'Hanna', sans-serif;
            color: #FFD200;
            font-size: 20px;
        }

        .centeringContainer {
            text-align: center;
            horizontal-align: middle;
        }

        .navbarDefaultFont {
            font-size: 13px;
        }

        .putaspace {
            margin-right: 40px;
            margin-top: 10px;
        }

        .others {
            margin-top: 12px;
        }

        .navbarExtra {
            line-height: 5px;
        }

        .iconplace {
            margin-left: 105px;
        }

        .iconspace2 {
            margin-left: 5px;
        }

        input {
            width: 250px;
            height: 32px;
            font-size: 15px;
            border: 0;
            border-radius: 8px;
            outline: none;
            padding-left: 10px;
            background-color: rgb(233, 233, 233);
        }

        .styled {
            border: 0;
            line-height: 2.5;
            padding: 0 20px;
            font-size: 1rem;
            text-align: center;
            width: 250px;
            color: #fff;
            border-radius: 20px;
            background-color: #FFD200;
        }

        .navbar-inner {
            border-bottom: 1px solid black;
        }

        .heart_img {
            width: 10%;
            float: right;
        }

        .love_btn {
            width: 30px;
            height: 30px;
            float: right;
        }

    </style>

</head>

<body>
    <nav class="navbar navbar-expand-lg bg-default navbarExtra navbar-white navbar-inner">
        <div class="container-fluid center-block" style='width:500px;'>
            <a class="navbar-brand putaspace" href="#">
                <p class="titleFont">투월킹</p>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse others" id="navbarNav">
                <ul class="navbar-nav">
    
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/TrailTeg/<%= user_id %>">
                            <p class="navbarDefaultFont">산책로 등록</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <p class="navbarDefaultFont">산책로 순위</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br>

    <div style="margin: 0 auto; width:30%; text-align:center;">
        <ul class="nav nav-tabs">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#" onclick="changePage(0)">투월킹</a>
                        </li>
                    </div>
                    <div class="col">
                        <li class="nav-item">
                            <a class="nav-link active" href="/towalking/<%= user_id %>/list/userList" onclick="changePage(1)">사용자</a>
                        </li>
                    </div>
                </div>
            </div>
        </ul>
    </div>

    <div style="border:1px solid; margin: 0 auto; width:30%; text-align:center;  padding:10px;">

        <div class="dropdown" style="text-align:left;">
            <button class="btn btn-default dropdown-toggle btn-sm" type="button" data-toggle="dropdown"
                id="dropdownBtn">
                구 선택
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#" value="성북구" id="geo" onclick="getGeo(0)">성북구</a>
                <a class="dropdown-item" href="#" value="성동구" id="geo" onclick="getGeo(1)">성동구</a>
                <a class="dropdown-item" href="#" value="중구" id="geo" onclick="getGeo(2)">중구</a>
            </div>
        </div>


        <div id="changingPage">
            <div id="showList">
                <% trails.forEach(trail=> { %>
                    <div style="float: left; width: 10%; padding:10px;"><a href="/towalking/<%= user_id %>/<%= trail.tw_num %>/tw_detail">
                        <%= trail.tw_num %>
                    </div>
                    <div style="float: left; width: 70%; padding:10px; text-align: left;">
                        <%= trail.tw_name %>
                    </div>
                </a>
                    <div>
                        <form action="/towalking/<%= user_id %>/<%= trail.tw_num %>/trail/like" method="post">
                            <input type="submit" value="공감">
                        </form>
                    </div>
                    <div style="float: left; width: 20%; padding:10px;">
                        <%= trail.like %>
                    </div>
                    <br>
                    <img src=<%=trail.tw_pic %> width="300",height="250" />
                    <hr>
                    <% }) %>
            </div>

        </div>

        <div id="userPage" style="display:none;">

            <% trails.forEach(trail=> { %>
                <div style="float: left; width: 10%; padding:10px;">


                    <%= trail.user_tw_num %>
                </div>
                <div style="float: left; width: 70%; padding:10px; text-align: left;">
                    <%= trail.user_tw_name %>
                        <%= trail.user_id %>
                </div>
                <div style="float: left; width: 20%; padding:10px;">
                    <%= trail.like %>
                </div>

                <br>
                <img src=<%=trail.user_tw_pic %> width="300",height="250" />
                <hr>

                <% }) %>
        </div>
</body>
</html>